@{
    ViewData["Title"] = "RoleType Add/Edit";
    Layout = "~/Views/Shared/SharedAdmin/_AdminLayout.cshtml";
}

@model Artefy.Areas.RoleType.Models.RoleTypeModel

<!--Page Bar-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Index"><i class="fa fa-home"></i>&nbsp;Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>RoleType Add/Edit</span>
            <i class="fa fa-circle"></i>
        </li>
    </ul>
</div>


<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="col-md-9">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject font-dark sbold uppercase">RoleType Add/Edit</span>
                    </div>
                </div>

                <div class="portlet-body form">
                    <h4 class="font-green-sharp">@TempData["Msg"]</h4>
                    <form class="form-horizontal" role="form" method="post" asp-area="RoleType" asp-controller="RoleType" asp-action="Save">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(x=>x.RoleTypeID)

                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>RoleType Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" asp-for="RoleTypeName" placeholder="Enter RoleType Name" />
                                    <span asp-validation-for="RoleTypeName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>Description</label>
                                <div class="col-md-9">
                                    @*<input type="textarea" class="form-control" asp-for="Description" placeholder="Enter Description" />*@
                                    <textarea rows="4" cols="50" class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" class="btn green" value="Save" />
                                    <a class="btn default" asp-area="RoleType" asp-controller="RoleType" asp-action="Index">Cancel</a>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

