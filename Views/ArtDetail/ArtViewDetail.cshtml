@{
    ViewData["Title"] = "View Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model DataTable;


<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!--Body-->
    <!-- Shop Details Section Begin -->
    <section class="shop-details">
        <div class="product__details__pic" style="margin-bottom:-15px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__breadcrumb">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <a asp-controller="AllArts" asp-action="Index">Art Work</a>
                            <span>Art Details</span>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom: 15px;">
					@foreach (DataRow dr in Model.Rows)
					{    
						<div class="col-lg-6 col-md-9">
							<div class="tab-content">
								<div class="tab-pane active" id="tabs-1" role="tabpanel">
									<div class="product__details__pic__item">
									<img src="@Url.Content(dr["Image"].ToString())" style="height:400px; width:400px; margin-top:60px;" alt="">
									</div>
								</div>
							</div>
						</div>

						<div class="product__details__content col-lg-6 col-md-9">
							<div class="container">
								<div class="row d-flex justify-content-center">
									<div class="col-lg-8">
										<div class="product__details__text">
											<h4>@dr["Title"]</h4>
										<p>@dr["Description"]</p>
											<div class="rating">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star-o"></i>
												<span> - 5 Reviews</span>
											</div>
											<h3>@dr["Price"]<span>90000.00</span></h3>
											<div class="product__details__last__option" style="">
												<ul>
													<li><span>Art No :</span> @dr["ArtNo"]</li>
													<li><span>Artist :</span> @dr["UserName"]</li>
													<li><span>Height :</span> @dr["Height"]</li>
													<li><span>Width  :</span> @dr["Width"]</li>
													<li><span>Type :</span> @dr["ArtTypeName"]</li>
													<li><span>Sub Type :</span> @dr["ArtSubTypeName"]</li>
												</ul>
			                        		</div>
											<div class="product__details__cart__option row">
											   <a href="#" class="primary-btn">Buy Now</a>
											   <div class="mt-3"></div>
											   <a href="#" class="primary-btn">Add to Cart</a>
											</div>
											<div class="product__details__last__option" style="">
												<h5><span>Guaranteed Safe Checkout</span></h5>
												<img src="~/img/shop-details/details-payment.png" alt="">
			                                
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
                </div>
            </div>
        </div>  
    </section>
    <!-- Shop Details Section End -->